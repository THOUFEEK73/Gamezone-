<body>
    <%- include("partials/navbar", { page: page }) %>
        <!-- Main Content -->
        <div class="container mx-auto px-4 py-8">
            <!-- Breadcrumb -->
            <div class="text-sm text-gray-600 mb-6">
                <a href="/allgames" class="hover:text-indigo-600">Games</a>
                <span class="mx-2">‚Ä∫</span>
                <span class="hover:text-indigo-600">
                    <%= game.category.categoryName %>
                </span>
                <span class="mx-2">‚Ä∫</span>
                <span class="text-2xl font-semibold text-red-700 hover:text-red-900 transition duration-300">
                    <%= game.title %>
                </span>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
                <!-- Left Side -->
                <div class="space-y-8">
                    <!-- Main Image -->
                    <div class="bg-white rounded-2xl shadow p-4 flex justify-center items-center zoom-container"
                        id="coverImageContainer">
                        <img src="<%= game.media.coverImage %>" alt="<%= game.title %>"
                            class="max-h-[500px] object-contain rounded-2xl" id="coverImage">
                    </div>

                    <!-- Quick Info -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <!-- Release Date -->
                        <div class="bg-white rounded-xl p-4 shadow">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-calendar text-indigo-600"></i>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">Release Date</p>
                                    <p class="font-semibold">
                                        <%= game.releaseDate.toLocaleDateString('en-GB') %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <!-- Publisher -->
                        <div class="bg-white rounded-xl p-4 shadow">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-building text-indigo-600"></i>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">Publisher</p>
                                    <p class="font-semibold">
                                        <%= game.company?.name || 'Unknown' %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <!-- Genre -->
                        <div class="bg-white rounded-xl p-4 shadow">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-gamepad text-indigo-600"></i>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">Genre</p>
                                    <p class="font-semibold">
                                        <%= game.category.categoryName %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Screenshots -->
                    <% if (game.media.screenshots && game.media.screenshots.length> 0) { %>
                        <div>
                            <h3 class="text-lg font-semibold text-gray-800 mb-2">Game Screenshots</h3>
                            <div class="grid grid-cols-2 sm:grid-cols-4 gap-3">
                                <% game.media.screenshots.forEach((screenshot, index)=> { %>
                                    <div class="bg-white p-2 rounded-xl shadow cursor-pointer hover:shadow-md transition group screenshot-item"
                                        data-src="<%= screenshot %>" data-index="<%= index %>">
                                        <img src="<%= screenshot %>"
                                            class="w-full h-20 object-cover rounded-lg group-hover:scale-105 transition-transform" />
                                    </div>
                                    <% }) %>
                            </div>
                        </div>
                        <% } %>

                            <!-- Rating -->
                            <div class="bg-white rounded-xl p-6 shadow">
                                <h3 class="text-lg font-semibold text-gray-800 mb-4">Game Rating</h3>
                                <div class="flex items-center space-x-4">
                                    <div class="flex text-yellow-400">
                                        <% for(let i=0; i < 5; i++) { %>
                                            <i
                                                class="fas fa-star <%= i < Math.floor(4.5) ? 'text-yellow-400' : 'text-gray-300' %>"></i>
                                            <% } %>
                                    </div>
                                    <span class="text-lg font-semibold text-gray-700">4.5</span>
                                    <span class="text-gray-500">(123 reviews)</span>
                                </div>
                                <div class="mt-4">
                                    <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
                                        <div class="h-full bg-yellow-400 rounded-full" style="width: 75%"></div>
                                    </div>
                                </div>
                            </div>
                </div>

                <!-- Right Side - Info and Buy -->
                <div class="space-y-8">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900 mb-4">
                            <%= game.title %>
                        </h1>
                        <div class="flex items-center text-yellow-400 text-lg space-x-1">
                            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i
                                class="fas fa-star"></i><i class="fas fa-star-half-alt"></i>
                            <span class="ml-2 text-sm text-gray-600">(123 reviews)</span>
                        </div>
                    </div>

                    <!-- Buy Box -->
                    <div class="bg-white/90 shadow-lg rounded-3xl p-6 space-y-6 border border-gray-200 backdrop-blur-sm">
                        <!-- Price & Wishlist -->
                        <div class="flex justify-between items-center">
                            <div class="text-3xl font-semibold text-gray-800 tracking-tight">‚Çπ<%= game.price %></div>
                            <button id="wishlistBtn"
                                onclick="toggleWishlist('<%= game._id %>')"
                                class="transition transform hover:scale-110 duration-200">
                                <i id="wishlistIcon"
                                    class="<%= isWishlisted ? 'fas' : 'far' %> fa-heart"
                                    style="color: <%= isWishlisted ? '#e11d48' : '#aaa' %>; font-size: 1.6rem;">
                                </i>
                            </button>
                        </div>
                    
                        <!-- Stock Status -->
                        <div>
                            <% if (game.stockQuantity === 0) { %>
                                <div class="text-red-600 font-medium flex items-center gap-2 text-sm">
                                    <i class="fas fa-exclamation-triangle"></i> Out of Stock
                                </div>
                            <% } else if (game.stockQuantity <= 5) { %>
                                <div class="text-yellow-600 font-medium flex items-center gap-2 text-sm">
                                    <i class="fas fa-fire"></i> Hurry! Only <%= game.stockQuantity %> left
                                </div>
                            <% } else { %>
                                <div class="text-green-600 font-medium flex items-center gap-2 text-sm">
                                    <i class="fas fa-check-circle"></i> <%= game.stockQuantity %> Available
                                </div>
                            <% } %>
                        </div>
                    
                        <!-- Action Buttons -->
                        <% if (game.stockQuantity === 0) { %>
                            <button class="w-full py-3 bg-gray-200 text-gray-500 rounded-full font-semibold text-sm cursor-not-allowed">
                                <i class="fas fa-exclamation-circle mr-2"></i> Currently Unavailable
                            </button>
                            <div class="text-sm text-gray-700 mt-3 bg-gray-50 p-3 rounded-xl border border-gray-100 space-y-2">
                                <p><i class="fas fa-info-circle text-blue-500 mr-2"></i> We don‚Äôt know when this game will be restocked.</p>
                                <button class="text-blue-600 hover:underline flex items-center gap-1 font-medium">
                                    <i class="fas fa-bell"></i> Notify Me
                                </button>
                            </div>
                        <% } else { %>
                            <button onclick="addToCart('<%= game._id %>', '<%= user._id %>')"
                                class="w-full py-3 bg-gradient-to-r from-blue-500 to-blue-700 text-white font-semibold rounded-full text-sm shadow-md hover:shadow-lg hover:from-blue-600 hover:to-blue-800 transition-all duration-300 flex items-center justify-center gap-2">
                                <i class="fas fa-cart-plus"></i> Add to Cart
                            </button>
                        <% } %>
                    </div>
                    
                    <div class="bg-white rounded-2xl p-6 shadow-md mt-8 transition-all duration-300">
                        <div class="space-y-6">
                            <!-- Description Header -->
                            <div class="flex items-center justify-between">
                                <h2 class="text-2xl md:text-3xl font-bold text-gray-900">About This Game</h2>
                                <button id="expandBtn"
                                    class="text-indigo-600 hover:text-indigo-800 flex items-center gap-2 text-sm font-medium focus:outline-none">
                                    <span>Show More</span>
                                    <i class="fas fa-chevron-down transition-transform duration-300"></i>
                                </button>
                            </div>

                            <!-- Description Content -->
                            <div id="descriptionContent"
                                class="relative overflow-hidden max-h-[200px] transition-all duration-500">
                                <div class="prose max-w-none text-gray-700 leading-relaxed space-y-5 text-base">
                                    <p>
                                        <%= game.description %>
                                    </p>

                                    <!-- Key Features -->
                                    <div class="pt-2">
                                        <h3 class="text-xl font-semibold text-gray-900 mb-4">Key Features</h3>
                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                            <% const features=[ { icon: "gamepad" , title: "Immersive Gameplay" ,
                                                desc: "Experience stunning graphics and engaging storylines that will keep you hooked for hours."
                                                }, { icon: "users" , title: "Multiplayer Experience" ,
                                                desc: "Join forces with friends or compete against players worldwide in exciting multiplayer modes."
                                                }, { icon: "trophy" , title: "Achievements & Rewards" ,
                                                desc: "Unlock achievements, collect rewards, and showcase your gaming prowess."
                                                }, { icon: "download" , title: "Regular Updates" ,
                                                desc: "Stay engaged with regular content updates, new features, and improvements."
                                                }, ]; %>
                                                <% features.forEach(f=> { %>
                                                    <div class="flex items-start space-x-4">
                                                        <div
                                                            class="w-12 h-12 rounded-xl bg-indigo-100 flex items-center justify-center">
                                                            <i class="fas fa-<%= f.icon %> text-lg text-indigo-600"></i>
                                                        </div>
                                                        <div>
                                                            <h4 class="font-semibold text-gray-800 mb-1">
                                                                <%= f.title %>
                                                            </h4>
                                                            <p class="text-sm text-gray-600">
                                                                <%= f.desc %>
