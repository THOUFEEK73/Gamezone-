            // Implement buy now functionality
        }

        const descriptionContent = document.getElementById('descriptionContent');
        const expandBtn = document.getElementById('expandBtn');
        const overlay = document.getElementById('overlay');
        let isExpanded = false;

        expandBtn.addEventListener('click', () => {
            isExpanded = !isExpanded;
            if (isExpanded) {
                descriptionContent.style.maxHeight = 'none';
                overlay.style.display = 'none';
                expandBtn.innerHTML = `
                    <span>Show Less</span>
                    <i class="fas fa-chevron-up transition-transform duration-300"></i>
                `;
            } else {
                descriptionContent.style.maxHeight = '200px';
                overlay.style.display = 'block';
                expandBtn.innerHTML = `
                    <span>Show More</span>
                    <i class="fas fa-chevron-down transition-transform duration-300"></i>
                `;
            }
        });

        // Check if content needs expand button
        window.addEventListener('load', () => {
            if (descriptionContent.scrollHeight <= 200) {
                expandBtn.style.display = 'none';
                overlay.style.display = 'none';
                descriptionContent.style.maxHeight = 'none';
            }
        });

        // Store screenshots array
        const screenshotsList = JSON.parse('<%- JSON.stringify(game.media.screenshots || []) %>');
        
        // Cover Image Zoom Functionality
        const coverImageContainer = document.getElementById('coverImageContainer');
        const coverImage = document.getElementById('coverImage');
        let isZoomed = false;

        if (coverImageContainer && coverImage) {
            coverImageContainer.addEventListener('mousemove', (e) => {
                if (!isZoomed) return;
                
                const rect = coverImageContainer.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                const xPercent = (x / rect.width) * 100;
                const yPercent = (y / rect.height) * 100;
                
                coverImage.style.transformOrigin = `${xPercent}% ${yPercent}%`;
            });

            coverImageContainer.addEventListener('click', () => {
                isZoomed = !isZoomed;
                if (isZoomed) {
                    coverImage.style.transform = 'scale(2)';
                    coverImageContainer.style.cursor = 'zoom-out';
                } else {
                    coverImage.style.transform = 'scale(1)';
                    coverImageContainer.style.cursor = 'zoom-in';
                }
            });
        }

        // Image Modal Functionality
        const imageModal = document.getElementById('imageModal');
        const modalImage = document.getElementById('modalImage');
        let currentImageIndex = 0;

        // Add click event listeners to all screenshot items
        document.querySelectorAll('.screenshot-item').forEach(item => {
            item.addEventListener('click', function() {
                const src = this.getAttribute('data-src');
                const index = parseInt(this.getAttribute('data-index'));
                openImageModal(src, index);
            });
        });

        function openImageModal(imageSrc, index) {
            if (imageModal && modalImage) {
                imageModal.style.display = 'block';
                modalImage.src = imageSrc;
                currentImageIndex = index;
                document.body.style.overflow = 'hidden';
            }
        }

        function closeImageModal() {
            if (imageModal) {
                imageModal.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        }

        function changeImage(direction) {
            if (!screenshotsList.length) return;
            
            currentImageIndex = (currentImageIndex + direction + screenshotsList.length) % screenshotsList.length;
            if (modalImage) {
                modalImage.src = screenshotsList[currentImageIndex];
            }
        }

        // Close modal when clicking outside the image
        if (imageModal) {
            imageModal.addEventListener('click', (e) => {
                if (e.target === imageModal) {
                    closeImageModal();
                }
            });
        }

        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (imageModal && imageModal.style.display === 'block') {
                switch(e.key) {
                    case 'Escape':
                        closeImageModal();
                        break;
                    case 'ArrowLeft':
                        changeImage(-1);
                        break;
                    case 'ArrowRight':
                        changeImage(1);
                        break;
                }
            }
        });
    </script>
