<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= game.title %> - GameZone</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        :root {
            --primary-color: #6366f1;
            --secondary-color: #4f46e5;
            --accent-color: #f43f5e;
            --background-color: #f8fafc;
            --text-color: #1e293b;
        }

        body {
            background-color: var(--background-color);
            color: var(--text-color);
        }

        .nav-link {
            position: relative;
            color: var(--text-color);
            transition: color 0.3s;
        }

        .nav-link::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: -2px;
            left: 0;
            background-color: var(--primary-color);
            transition: width 0.3s;
        }

        .nav-link:hover::after {
            width: 100%;
        }

        .product-image {
            max-width: 100%;
            max-height: 500px;
            object-fit: contain;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

        .price-tag {
            color: var(--accent-color);
            font-size: 24px;
            font-weight: 600;
        }

        .buy-box {
            background: white;
            border-radius: 16px;
            padding: 24px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

        .add-to-cart-button {
            background: var(--primary-color);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .add-to-cart-button:hover {
            background: var(--secondary-color);
            transform: translateY(-2px);
        }

        .buy-now-button {
            background: var(--accent-color);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .buy-now-button:hover {
            background: #e11d48;
            transform: translateY(-2px);
        }

        .platform-badge {
            background-color: #f1f5f9;
            border-radius: 6px;
            padding: 6px 12px;
            font-size: 14px;
            color: var(--text-color);
            font-weight: 500;
            transition: all 0.3s;
        }

        .platform-badge:hover {
            background-color: var(--primary-color);
            color: white;
        }

        .game-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

        .game-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }

        .stock-status {
            color: #10b981;
            font-size: 14px;
            font-weight: 500;
        }

        @media (max-width: 768px) {
            .buy-box {
                padding: 16px;
            }

            .price-tag {
                font-size: 20px;
            }

            .platform-badge {
                padding: 4px 8px;
                font-size: 12px;
            }
        }

        .mobile-menu {
            display: none;
        }

        @media (max-width: 768px) {
            .mobile-menu {
                display: block;
            }
            .desktop-menu {
                display: none;
            }
            .nav-content {
                position: fixed;
                top: 64px;
                left: 0;
                right: 0;
                background: white;
                padding: 1rem;
                transform: translateX(-100%);
                transition: transform 0.3s ease-in-out;
            }
            .nav-content.active {
                transform: translateX(0);
            }
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="bg-white shadow-sm sticky top-0 z-50">
        <div class="container mx-auto px-4 py-3">
            <div class="flex justify-between items-center">
                <a href="/home" class="text-2xl font-bold text-indigo-600">GameZone</a>
                
                <!-- Hamburger Menu -->
                <button class="mobile-menu p-2 rounded-lg hover:bg-gray-100 focus:outline-none" onclick="toggleMenu()">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>

                <!-- Desktop Navigation -->
                <div class="desktop-menu hidden md:flex items-center space-x-6">
                    <a href="/games" class="nav-link">Games</a>
                    <a href="/categories" class="nav-link">Categories</a>
                    <a href="/deals" class="nav-link">Deals</a>
                    <a href="/about" class="nav-link">About</a>
                </div>

                <div class="flex items-center space-x-4">
                    <div class="relative hidden md:block">
                        <input type="text" 
                               placeholder="Search games..." 
                               class="pl-10 pr-4 py-2 rounded-full border border-gray-200 focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500">
                        <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                    </div>

                    <a href="/cart" class="relative">
                        <i class="fas fa-shopping-cart text-xl text-indigo-600"></i>
                        <span class="absolute -top-2 -right-2 bg-accent-color text-white rounded-full w-5 h-5 flex items-center justify-center text-xs">
                            <%= locals.cartCount || 0 %>
                        </span>
                    </a>

                    <% if (locals.user) { %>
                        <div class="relative group">
                            <button class="flex items-center space-x-2 focus:outline-none">
                                <img src="<%= user.avatar || '/images/default-avatar.png' %>" 
                                     alt="Profile" 
                                     class="w-8 h-8 rounded-full border-2 border-indigo-500">
                                <span class="font-medium hidden md:inline"><%= user.name %></span>
                            </button>
                            <div class="absolute right-0 w-48 mt-2 py-2 bg-white rounded-lg shadow-xl hidden group-hover:block">
                                <a href="/profile" class="block px-4 py-2 hover:bg-indigo-50 transition-colors">Profile</a>
                                <a href="/orders" class="block px-4 py-2 hover:bg-indigo-50 transition-colors">Orders</a>
                                <a href="/wishlist" class="block px-4 py-2 hover:bg-indigo-50 transition-colors">Wishlist</a>
                                <a href="/logout" class="block px-4 py-2 hover:bg-indigo-50 transition-colors text-accent-color">Logout</a>
                            </div>
                        </div>
                    <% } else { %>
                        <a href="/login" class="bg-indigo-600 text-white px-6 py-2 rounded-full hover:bg-indigo-700 transition-colors">
                            Login
                        </a>
                    <% } %>
                </div>
            </div>

            <!-- Mobile Navigation Menu -->
            <div class="nav-content md:hidden">
                <div class="flex flex-col space-y-4">
                    <div class="relative mb-4">
                        <input type="text" 
                               placeholder="Search games..." 
                               class="w-full pl-10 pr-4 py-2 rounded-full border border-gray-200 focus:outline-none focus:border-indigo-500">
                        <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                    </div>
                    <a href="/games" class="block py-2 hover:text-indigo-600">Games</a>
                    <a href="/categories" class="block py-2 hover:text-indigo-600">Categories</a>
                    <a href="/deals" class="block py-2 hover:text-indigo-600">Deals</a>
                    <a href="/about" class="block py-2 hover:text-indigo-600">About</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8">
        <!-- Breadcrumb -->
        <div class="text-sm text-gray-600 mb-6">
            <a href="/" class="hover:text-indigo-600">Games</a>
            <span class="mx-2">›</span>
            <a href="/category/<%= game.category %>" class="hover:text-indigo-600"><%= game.category %></a>
            <span class="mx-2">›</span>
            <span class="text-gray-900 font-medium"><%= game.title %></span>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12">
            <!-- Left Column - Images and Quick Info -->
            <div class="space-y-6">
                <!-- Main Image -->
                <div class="bg-white rounded-2xl shadow-sm w-fit mx-auto overflow-hidden">
                    <img src="<%= game.media.coverImage %>" 
                         alt="<%= game.title %>" 
                         class="w-auto max-h-[600px] object-contain rounded-2xl">
                </div>
                
                <!-- Quick Info Cards -->
                <div class="grid grid-cols-2 gap-4">
                    <!-- Release Date -->
                    <div class="bg-white rounded-xl p-4 shadow-sm">
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 rounded-lg bg-indigo-50 flex items-center justify-center">
                                <i class="fas fa-calendar text-indigo-600"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">Release Date</p>
                                <p class="font-semibold"><%= game.releaseDate || 'Coming Soon' %></p>
                            </div>
                        </div>
                    </div>

                    <!-- Publisher -->
                    <div class="bg-white rounded-xl p-4 shadow-sm">
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 rounded-lg bg-indigo-50 flex items-center justify-center">
                                <i class="fas fa-building text-indigo-600"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">Publisher</p>
                                <p class="font-semibold"><%= game.publisher || 'Unknown' %></p>
                            </div>
                        </div>
                    </div>

                    <!-- Genre -->
                    <div class="bg-white rounded-xl p-4 shadow-sm">
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 rounded-lg bg-indigo-50 flex items-center justify-center">
                                <i class="fas fa-gamepad text-indigo-600"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">Genre</p>
                                <p class="font-semibold"><%=game.category.categoryName %></p>
                            </div>
                        </div>
                    </div>

                    <!-- Player Count -->
                    <div class="bg-white rounded-xl p-4 shadow-sm">
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 rounded-lg bg-indigo-50 flex items-center justify-center">
                                <i class="fas fa-users text-indigo-600"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">Players</p>
                                <p class="font-semibold"><%= game.playerCount || 'Single Player' %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Thumbnails with Title -->
                <div class="space-y-3">
                    <h3 class="text-lg font-semibold text-gray-800">Game Screenshots</h3>
                    <% if (game.media.screenshots && game.media.screenshots.length > 0) { %>
                        <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
                            <% game.media.screenshots.forEach(screenshot => { %>
                                <div class="bg-white p-2 rounded-xl shadow-sm cursor-pointer hover:shadow-md transition-shadow group">
                                    <img src="<%= screenshot %>" 
                                         alt="Screenshot" 
                                         class="w-full h-20 object-cover rounded-lg transition-transform duration-300 group-hover:scale-105">
                                </div>
                            <% }); %>
                        </div>
                    <% } %>
                </div>

                <!-- Platform Availability -->
                <div class="bg-white rounded-xl p-6 shadow-sm">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">Available Platforms</h3>
                    <div class="flex flex-wrap gap-3">
                        <% game.platforms.forEach(platform => { %>
                            <div class="flex items-center space-x-2 bg-indigo-50 px-4 py-2 rounded-lg">
                                <% let platformIcon = 'desktop'; %>
                                <% if (platform.toLowerCase().includes('ps')) platformIcon = 'playstation'; %>
                                <% if (platform.toLowerCase().includes('xbox')) platformIcon = 'xbox'; %>
                                <% if (platform.toLowerCase().includes('switch')) platformIcon = 'nintendo-switch'; %>
                                <i class="fab fa-<%= platformIcon %> text-indigo-600"></i>
                                <span class="font-medium text-gray-700"><%= platform %></span>
                            </div>
                        <% }); %>
                    </div>
                </div>

                <!-- Game Rating -->
                <div class="bg-white rounded-xl p-6 shadow-sm">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">Game Rating</h3>
                    <div class="flex items-center space-x-4">
                        <div class="flex items-center">
                            <% for(let i = 0; i < 5; i++) { %>
                                <i class="fas fa-star <%= i < Math.floor(4.5) ? 'text-yellow-400' : 'text-gray-300' %>"></i>
                            <% } %>
                        </div>
                        <span class="text-lg font-semibold text-gray-700">4.5</span>
                        <span class="text-gray-500">(123 reviews)</span>
                    </div>
                    <div class="mt-4">
                        <div class="flex items-center space-x-2">
                            <div class="flex-1 h-2 bg-gray-200 rounded-full overflow-hidden">
                                <div class="h-full bg-yellow-400 rounded-full" style="width: 75%"></div>
                            </div>
                            <span class="text-sm text-gray-500">75%</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Product Info -->
            <div class="space-y-8">
                <div>
                    <h1 class="text-3xl font-bold mb-4"><%= game.title %></h1>
                    <div class="flex items-center space-x-4">
                        <div class="flex items-center">
                            <div class="flex text-yellow-400">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                            </div>
                            <span class="ml-2 text-gray-600">(123 reviews)</span>
                        </div>
                    </div>
                </div>

                <!-- Buy Box -->
                <div class="buy-box">
                    <div class="price-tag mb-4">$<%= game.price %></div>
                    
                    <div class="space-y-4">
                        <!-- Platform Selection -->
                        <div>
                            <label class="block text-sm font-medium mb-2">Available Platforms:</label>
                            <div class="flex flex-wrap gap-2">
                                <% game.platforms.forEach(platform => { %>
                                    <span class="platform-badge"><%= platform %></span>
                                <% }); %>
                            </div>
                        </div>

                        <!-- Stock Status -->
                        <div class="stock-status">
                            <i class="fas fa-check-circle mr-1"></i>
                            <%= game.stockQuantity %> units in stock
                        </div>

                        <!-- Quantity -->
                        <div>
                            <label class="block text-sm font-medium mb-2">Quantity:</label>
                            <select id="quantity" 
                                    class="w-24 border border-gray-200 rounded-lg p-2 focus:outline-none focus:border-indigo-500"
                                    onchange="updateTotalPrice()">
                                <% for(let i = 1; i <= Math.min(5, game.stockQuantity); i++) { %>
                                    <option value="<%= i %>"><%= i %></option>
                                <% } %>
                            </select>
                        </div>

                        <!-- Action Buttons -->
                        <div class="flex flex-col sm:flex-row gap-4">
                            <button onclick="addToCart('<%= game._id %>')" 
                                    class="add-to-cart-button flex-1">
                                <i class="fas fa-shopping-cart mr-2"></i>
                                Add to Cart
                            </button>
                            <button onclick="buyNow('<%= game._id %>')" 
                                    class="buy-now-button flex-1">
                                <i class="fas fa-bolt mr-2"></i>
                                Buy Now
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Game Description -->
                <div class="bg-white rounded-2xl p-6 shadow-sm mt-8">
                    <div class="space-y-6">
                        <!-- Description Header -->
                        <div class="flex items-center justify-between">
                            <h2 class="text-2xl font-bold text-gray-800">About This Game</h2>
                            <button id="expandBtn" class="text-indigo-600 hover:text-indigo-800 flex items-center gap-2 text-sm font-medium">
                                <span>Show More</span>
                                <i class="fas fa-chevron-down transition-transform duration-300"></i>
                            </button>
                        </div>

                        <!-- Description Content -->
                        <div id="descriptionContent" class="relative overflow-hidden" style="max-height: 200px;">
                            <div class="prose max-w-none text-gray-600 leading-relaxed space-y-4">
                                <p class="text-lg"><%= game.description %></p>
                                
                                <!-- Key Features -->
                                <div class="mt-8">
                                    <h3 class="text-xl font-semibold text-gray-800 mb-4">Key Features</h3>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <div class="flex items-start space-x-4">
                                            <div class="flex-shrink-0">
                                                <div class="w-12 h-12 rounded-xl bg-indigo-50 flex items-center justify-center">
                                                    <i class="fas fa-gamepad text-xl text-indigo-600"></i>
                                                </div>
                                            </div>
                                            <div>
                                                <h4 class="font-semibold text-gray-800 mb-1">Immersive Gameplay</h4>
                                                <p class="text-gray-600">Experience stunning graphics and engaging storylines that will keep you hooked for hours.</p>
                                            </div>
                                        </div>

                                        <div class="flex items-start space-x-4">
                                            <div class="flex-shrink-0">
                                                <div class="w-12 h-12 rounded-xl bg-indigo-50 flex items-center justify-center">
                                                    <i class="fas fa-users text-xl text-indigo-600"></i>
                                                </div>
                                            </div>
                                            <div>
                                                <h4 class="font-semibold text-gray-800 mb-1">Multiplayer Experience</h4>
                                                <p class="text-gray-600">Join forces with friends or compete against players worldwide in exciting multiplayer modes.</p>
                                            </div>
                                        </div>

                                        <div class="flex items-start space-x-4">
                                            <div class="flex-shrink-0">
                                                <div class="w-12 h-12 rounded-xl bg-indigo-50 flex items-center justify-center">
                                                    <i class="fas fa-trophy text-xl text-indigo-600"></i>
                                                </div>
                                            </div>
                                            <div>
                                                <h4 class="font-semibold text-gray-800 mb-1">Achievements & Rewards</h4>
                                                <p class="text-gray-600">Unlock achievements, collect rewards, and showcase your gaming prowess.</p>
                                            </div>
                                        </div>

                                        <div class="flex items-start space-x-4">
                                            <div class="flex-shrink-0">
                                                <div class="w-12 h-12 rounded-xl bg-indigo-50 flex items-center justify-center">
                                                    <i class="fas fa-download text-xl text-indigo-600"></i>
                                                </div>
                                            </div>
                                            <div>
                                                <h4 class="font-semibold text-gray-800 mb-1">Regular Updates</h4>
                                                <p class="text-gray-600">Stay engaged with regular content updates, new features, and improvements.</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- System Requirements if available -->
                                <% if (game.systemRequirements) { %>
                                <div class="mt-8">
                                    <h3 class="text-xl font-semibold text-gray-800 mb-4">System Requirements</h3>
                                    <div class="bg-gray-50 rounded-xl p-6">
                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                            <div>
                                                <h4 class="font-semibold text-gray-800 mb-2">Minimum</h4>
                                                <ul class="space-y-2 text-gray-600">
                                                    <li class="flex items-center gap-2">
                                                        <i class="fas fa-microchip text-indigo-600"></i>
                                                        <%= game.systemRequirements.minimum.processor %>
                                                    </li>
                                                    <!-- Add other minimum requirements -->
                                                </ul>
                                            </div>
                                            <div>
                                                <h4 class="font-semibold text-gray-800 mb-2">Recommended</h4>
                                                <ul class="space-y-2 text-gray-600">
                                                    <li class="flex items-center gap-2">
                                                        <i class="fas fa-microchip text-indigo-600"></i>
                                                        <%= game.systemRequirements.recommended.processor %>
                                                    </li>
                                                    <!-- Add other recommended requirements -->
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                            <!-- Gradient Overlay -->
                            <div id="overlay" class="absolute bottom-0 left-0 right-0 h-20 bg-gradient-to-t from-white to-transparent pointer-events-none"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Related Games -->
        <div class="mt-16">
            <h2 class="text-2xl font-bold mb-8">Related Games</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                <% if (relatedGames && relatedGames.length > 0) { %>
                    <% relatedGames.forEach(game => { %>
                        <div class="game-card">
                            <a href="/gamedetail/<%= game._id %>">
                                <img src="<%= game.media.coverImage %>" 
                                     alt="<%= game.title %>" 
                                     class="w-full h-48 object-cover">
                                <div class="p-4">
                                    <h3 class="font-bold text-lg mb-2 truncate"><%= game.title %></h3>
                                    <p class="text-accent-color font-semibold">$<%= game.price %></p>
                                    <button onclick="addToCart('<%= game._id %>')"
                                            class="w-full mt-4 bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 transition-colors">
                                        Add to Cart
                                    </button>
                                </div>
                            </a>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="col-span-full text-center text-gray-500">No related games found.</p>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        function toggleMenu() {
            const navContent = document.querySelector('.nav-content');
            navContent.classList.toggle('active');
        }

        // Close menu when clicking outside
        document.addEventListener('click', function(event) {
            const navContent = document.querySelector('.nav-content');
            const hamburger = document.querySelector('.mobile-menu');
            if (!navContent.contains(event.target) && !hamburger.contains(event.target)) {
                navContent.classList.remove('active');
            }
        });

        function updateTotalPrice() {
            const quantity = document.getElementById('quantity').value;
            const price = parseFloat('<%= game.price %>');
            const totalPrice = quantity * price;
            // Update price display if needed
        }

        function addToCart(gameId) {
            const quantity = document.getElementById('quantity').value;
            // Implement add to cart functionality
        }

        function buyNow(gameId) {
            const quantity = document.getElementById('quantity').value;
            // Implement buy now functionality
        }

        const descriptionContent = document.getElementById('descriptionContent');
        const expandBtn = document.getElementById('expandBtn');
        const overlay = document.getElementById('overlay');
        let isExpanded = false;

        expandBtn.addEventListener('click', () => {
            isExpanded = !isExpanded;
            if (isExpanded) {
                descriptionContent.style.maxHeight = 'none';
                overlay.style.display = 'none';
                expandBtn.innerHTML = `
                    <span>Show Less</span>
                    <i class="fas fa-chevron-up transition-transform duration-300"></i>
                `;
            } else {
                descriptionContent.style.maxHeight = '200px';
                overlay.style.display = 'block';
                expandBtn.innerHTML = `
                    <span>Show More</span>
                    <i class="fas fa-chevron-down transition-transform duration-300"></i>
                `;
            }
        });

        // Check if content needs expand button
        window.addEventListener('load', () => {
            if (descriptionContent.scrollHeight <= 200) {
                expandBtn.style.display = 'none';
                overlay.style.display = 'none';
                descriptionContent.style.maxHeight = 'none';
            }
