<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Wishlist</title>
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body class="bg-white text-gray-800">

  <%- include("partials/navbar", { page: page }) %>

  <main class="pt-24 pb-10 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold mb-8">Your Wishlist</h1>

      <!-- Responsive Table Wrapper -->
      <div class="overflow-x-auto bg-white rounded-xl shadow">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-100 text-sm text-gray-700 font-semibold">
            <tr>
              <th class="px-4 py-3 text-left">Image</th>
              <th class="px-4 py-3 text-left">Name</th>
              <th class="px-4 py-3 text-left">Category</th>
              <th class="px-4 py-3 text-left">Price</th>
              <th class="px-4 py-3 text-right">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100 text-sm">
            <% wishlistItems.forEach(item => { %>
              <tr class="hover:bg-gray-50 transition" data-product-id="<%= item._id %>">
                <td class="px-4 py-3">
                  <img src="<%= item.image %>" alt="<%= item.name %>" class="w-16 h-16 object-cover rounded-lg" />
                </td>
                <td class="px-4 py-3 font-medium text-gray-800"><%= item.name %></td>
                <td class="px-4 py-3 text-gray-500"><%= item.category %></td>
                <td class="px-4 py-3 font-semibold text-indigo-600">₹<%= item.price %></td>
                <td class="px-4 py-3 text-right space-x-2">
                  <button class="remove-from-wishlist text-red-500 hover:text-red-600 transition" data-product-id="<%= item._id %>">
                    <i class="fas fa-trash-alt"></i>
                  </button>
                  <button class="add-to-cart text-green-500 hover:text-green-600 transition" data-product-id="<%= item._id %>">
                    <i class="fas fa-shopping-cart"></i>
                  </button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </main>

  <footer class="bg-white border-t mt-10 py-6 text-center text-sm text-gray-400">
    © 2025 GameZone. All rights reserved.
  </footer>

</body>
</html>
