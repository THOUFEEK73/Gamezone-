<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Wishlist</title>
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body class="bg-white text-gray-800">

  <%- include("partials/navbar", { page: page }) %>

  <main class="pt-24 pb-10 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold mb-8">Your Wishlist</h1>

      <!-- Responsive Table Wrapper -->
      <div class="overflow-x-auto bg-white rounded-xl shadow">
        <table class="min-w-full divide-y divide-gray-200">
          <% if (wishlistItems.length > 0) { %>
            <thead id="wishlistTableHead" class="bg-gray-100 text-sm text-gray-700 font-semibold">
              <tr>
                <th class="px-4 py-3 text-left">Image</th>
                <th class="px-4 py-3 text-left">Name</th>
                <th class="px-4 py-3 text-left">Category</th>
                <th class="px-4 py-3 text-left">Price</th>
                <th class="px-4 py-3 text-right">Actions</th>
              </tr>
            </thead>
            <% } %>
            
          <tbody id="wishlistTableBody" class="divide-y divide-gray-100 text-sm">
            <% if (wishlistItems.length > 0) { %>
              <% wishlistItems.forEach(item => { %>
                <tr class="hover:bg-gray-50 transition" data-product-id="<%= item._id %>">
                  <td class="px-4 py-3">
                    <img src="<%= item.image %>" alt="<%= item.name %>" class="w-16 h-16 object-cover rounded-lg" />
                  </td>
                  <td class="px-4 py-3 font-medium text-gray-800"><%= item.name %></td>
                  <td class="px-4 py-3 text-gray-500"><%= item.category %></td>
                  <td class="px-4 py-3 font-semibold text-indigo-600">₹<%= item.price %></td>
                  <td class="px-4 py-3 text-right space-x-2">
                    <div class="flex items-center justify-end space-x-3">
                      <button
                        title="Remove from Wishlist"
                        class="remove-from-wishlist flex items-center gap-1 px-3 py-1.5 border border-red-500 text-red-500 rounded-md hover:bg-red-500 hover:text-white transition"
                        data-product-id="<%= item._id %>"
                      >
                        <i class="fas fa-trash-alt"></i>
                        <span class="hidden sm:inline">Remove</span>
                      </button>
                    
                      <button
                       
                        title="Add to Cart"
                        class="add-to-cart flex items-center gap-1 px-3 py-1.5 border border-green-500 text-green-500 rounded-md hover:bg-green-500 hover:text-white transition"
                        data-product-id="<%= item._id %>"
                      >
                        <i class="fas fa-shopping-cart"></i>
                        <span class="hidden sm:inline">Add</span>
                      </button>
                    </div>
                    
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="5" class="text-center px-6 py-10">
                  <div class="flex flex-col items-center justify-center space-y-4 text-gray-500">
                    <i class="fas fa-heart-broken text-4xl text-red-400"></i>
                    <p class="text-lg font-medium">Your wishlist is empty</p>
                    <p class="text-sm">Start adding your favorite items to keep track of them here!</p>
                    <a href="/allgames" class="inline-block mt-2 px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition">
                      Browse Products
                    </a>
                  </div>
                </td>
              </tr>
              
            <% } %>
          </tbody>
          
        </table>
      </div>
    </div>
  </main>

  <footer class="bg-white border-t mt-10 py-6 text-center text-sm text-gray-400">
    © 2025 GameZone. All rights reserved.
  </footer>

<script src="/js/wishlist.js"></script>
</body>
</html>
