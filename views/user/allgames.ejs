<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Game Store</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    function toggleDropdown(id) {
      const dropdown = document.getElementById(id);
      const arrow = document.getElementById("arrow" + id.replace("Dropdown", ""));
      dropdown.classList.toggle("hidden");
      arrow.classList.toggle("rotate-180");
    }

    function toggleMobileFilters() {
      const sidebar = document.getElementById("sidebar");
      sidebar.classList.toggle("hidden");
    }
  </script>
</head>
<body class="bg-white text-gray-900">

  <!-- Navbar -->
  <nav class="bg-white shadow-sm px-6 py-4 flex justify-between items-center border-b border-gray-200">
    <h1 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-indigo-500 to-pink-500">
      ðŸŽ® GameZone
    </h1>
    <input type="text" placeholder="Search games..." class="hidden sm:block px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-300 w-1/2">
    <div class="space-x-4">
      <button class="sm:hidden" onclick="toggleMobileFilters()">â˜°</button>
      <a href="#" class="text-gray-700 hover:text-indigo-600 hidden sm:inline">Cart</a>
      <a href="#" class="text-gray-700 hover:text-indigo-600 hidden sm:inline">Profile</a>
    </div>
  </nav>

  <div class="flex flex-col sm:flex-row">

    <!-- Sidebar -->
    <aside id="sidebar" class="w-full sm:w-64 p-6 bg-gray-50 border-b sm:border-r sm:border-b-0 border-gray-200 sm:h-screen sm:sticky sm:top-0 hidden sm:block">
      <h2 class="text-xl font-bold mb-4">Filters</h2>

      <!-- Price -->
      <div class="mb-6">
        <h3 class="font-medium text-gray-700 mb-1">Price</h3>
        <input type="range" min="0" max="100" value="50" class="w-full">
        <p class="text-xs text-gray-500 mt-1">Up to $50</p>
      </div>

      <!-- Genre Dropdown -->
      <div class="mb-4">
        <button onclick="toggleDropdown('genreDropdown')" class="flex justify-between items-center w-full font-medium text-gray-700">
          Genre
          <svg class="w-4 h-4 ml-2 transition-transform" id="arrowGenre" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>
        <div id="genreDropdown" class="mt-2 pl-2 space-y-1 text-sm hidden">
          <label><input type="checkbox" class="mr-2">Action</label>
          <label><input type="checkbox" class="mr-2">Adventure</label>
          <label><input type="checkbox" class="mr-2">RPG</label>
          <label><input type="checkbox" class="mr-2">Shooter</label>
        </div>
      </div>

      <!-- Company Dropdown -->
      <div class="mb-4">
        <button onclick="toggleDropdown('companyDropdown')" class="flex justify-between items-center w-full font-medium text-gray-700">
          Company
          <svg class="w-4 h-4 ml-2 transition-transform" id="arrowCompany" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>
        <div id="companyDropdown" class="mt-2 pl-2 space-y-1 text-sm hidden">
          <label><input type="checkbox" class="mr-2">Sony</label>
          <label><input type="checkbox" class="mr-2">Microsoft</label>
          <label><input type="checkbox" class="mr-2">Nintendo</label>
          <label><input type="checkbox" class="mr-2">Ubisoft</label>
        </div>
      </div>
    </aside>

    <!-- Product Grid -->
    <main class="flex-1 p-6">
      <h2 class="text-2xl font-bold mb-6">All Games</h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <!-- Game Card -->
        <div class="bg-white border rounded-lg shadow-md hover:shadow-xl transition duration-300 overflow-hidden">
          <img src="https://via.placeholder.com/300x180" alt="Game Cover" class="w-full h-40 object-cover">
          <div class="p-4">
            <h3 class="text-lg font-semibold text-gray-800 truncate">Game Title</h3>
            <p class="text-sm text-gray-500">Action | Sony</p>
            <div class="mt-3 flex justify-between items-center">
              <span class="text-indigo-600 font-bold">$49.99</span>
              <button class="text-sm px-4 py-1.5 border border-indigo-500 text-indigo-500 rounded hover:bg-indigo-500 hover:text-white transition">
                Add to Cart
              </button>
            </div>
          </div>
        </div>

        

        <!-- Repeat for more games... -->
      </div>
    </main>
    
  </div>
<!-- Footer -->
<footer class="bg-gray-900 text-gray-300 mt-12">
  <div class="max-w-7xl mx-auto px-6 py-10 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8">
    
    <!-- Logo & About -->
    <div>
      <h2 class="text-xl font-bold text-white mb-2">ðŸŽ® GameZone</h2>
      <p class="text-sm">Your ultimate destination for the best console games. Explore, play, and level up your experience.</p>
    </div>

    <!-- Quick Links -->
    <div>
      <h3 class="text-lg font-semibold text-white mb-3">Quick Links</h3>
      <ul class="space-y-2 text-sm">
        <li><a href="#" class="hover:text-white">Home</a></li>
        <li><a href="#" class="hover:text-white">Cart</a></li>
        <li><a href="#" class="hover:text-white">Profile</a></li>
        <li><a href="#" class="hover:text-white">Support</a></li>
      </ul>
    </div>

    <!-- Categories -->
    <div>
      <h3 class="text-lg font-semibold text-white mb-3">Categories</h3>
      <ul class="space-y-2 text-sm">
        <li><a href="#" class="hover:text-white">Action</a></li>
        <li><a href="#" class="hover:text-white">RPG</a></li>
        <li><a href="#" class="hover:text-white">Shooter</a></li>
        <li><a href="#" class="hover:text-white">Adventure</a></li>
      </ul>
    </div>

    <!-- Newsletter -->
    <div>
      <h3 class="text-lg font-semibold text-white mb-3">Stay Updated</h3>
      <p class="text-sm mb-3">Subscribe to get latest updates and offers.</p>
      <form class="flex flex-col sm:flex-row sm:items-center gap-2">
        <input type="email" placeholder="Enter your email" class="w-full px-3 py-2 rounded-md bg-gray-800 text-gray-200 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-sm">
        <button class="bg-indigo-600 hover:bg-indigo-500 text-white text-sm px-4 py-2 rounded-md">Subscribe</button>
      </form>
    </div>
  </div>

  <div class="border-t border-gray-700 text-center text-sm py-4 mt-6">
    Â© <%= new Date().getFullYear() %> GameZone. All rights reserved.
  </div>
</footer>

</body>
</html>
