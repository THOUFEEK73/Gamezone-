<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>GameZone - Reset Password</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/your-code.js" crossorigin="anonymous"></script>
</head>
<body class="bg-gradient-to-b from-black via-zinc-900 to-black font-sans">
  <div class="min-h-screen flex items-center justify-center px-4">
    <div class="w-full max-w-md bg-zinc-900/50 backdrop-blur-sm p-8 rounded-2xl shadow-2xl border border-zinc-800/50 hover:border-zinc-700/50 transition-all duration-300">
      <!-- Logo and Title -->
      <div class="text-center mb-8 transform hover:scale-105 transition-transform duration-300">
        <h1 class="text-5xl font-bold text-white mb-2 animate-pulse">GameZone</h1>
        <p class="text-zinc-400 hover:text-zinc-300 transition-colors">Reset Your Password</p>
      </div>

      <!-- Description -->
      <p class="text-zinc-400 text-center mb-8">
        Please enter your new password below to complete the reset process.
      </p>

      <!-- Error Message (if any) -->
      <% if (typeof err !== 'undefined' && err) { %>
        <div class="bg-red-900/20 border border-red-900/30 text-red-400 px-4 py-2 rounded-lg mb-6 animate-shake">
          <%= err %>
        </div>
      <% } %>

      <!-- Success Message (if any) -->
      <% if (typeof success !== 'undefined' && success) { %>
        <div class="bg-green-900/20 border border-green-900/30 text-green-400 px-4 py-2 rounded-lg mb-6 animate-bounce">
          <%= success %>
        </div>
      <% } %>

      <!-- Password Requirements -->
      <div class="mb-6 p-4 bg-zinc-800/30 rounded-lg">
        <h3 class="text-zinc-300 font-medium mb-2">Password Requirements:</h3>
        <ul class="space-y-2 text-sm">
          <li class="text-zinc-400 flex items-center" id="lengthCheck">
            <i class="fas fa-circle text-xs mr-2"></i>
            At least 8 characters long
          </li>
          <li class="text-zinc-400 flex items-center" id="uppercaseCheck">
            <i class="fas fa-circle text-xs mr-2"></i>
            One uppercase letter
          </li>
          <li class="text-zinc-400 flex items-center" id="numberCheck">
            <i class="fas fa-circle text-xs mr-2"></i>
            One number
          </li>
          <li class="text-zinc-400 flex items-center" id="matchCheck">
            <i class="fas fa-circle text-xs mr-2"></i>
            Passwords match
          </li>
        </ul>
      </div>

      <!-- Reset Password Form -->
      <form action="/reset-password" method="POST" class="space-y-6" id="resetForm">
        <!-- Hidden Token Field -->
        <input type="hidden" name="token" value="<%= token %>">

        <!-- New Password -->
        <div class="group">
          <label for="password" class="block text-sm font-medium text-zinc-300 mb-2 group-hover:text-white transition-colors">
            New Password
          </label>
          <div class="relative">
            <input 
              type="password" 
              id="password" 
              name="password" 
              required
              minlength="8" autocomplete="new-password"
              class="w-full bg-zinc-800/50 border border-zinc-700 text-white rounded-lg pl-10 pr-4 py-2.5 
                     focus:ring-2 focus:ring-white/50 focus:border-transparent 
                     hover:border-zinc-600 transition-all duration-200"
              placeholder="Enter your new password"
            >
            <i class="fas fa-lock absolute left-3 top-3 text-zinc-500"></i>
            <button type="button" 
                    onclick="togglePassword('password', 'togglePassword')"
                    class="absolute right-3 top-3 text-zinc-500 hover:text-white transition-colors">
              <i class="fas fa-eye" id="togglePassword"></i>
            </button>
          </div>
        </div>

        <!-- Confirm Password -->
        <div class="group">
          <label for="confirmPassword" class="block text-sm font-medium text-zinc-300 mb-2 group-hover:text-white transition-colors">
            Confirm Password
          </label>
          <div class="relative">
            <input  
              type="password" 
              id="confirmPassword" 
              name="confirmPassword" 
              autocomplete="new-password"
              required
              minlength="8"
              class="w-full bg-zinc-800/50 border border-zinc-700 text-white rounded-lg pl-10 pr-4 py-2.5 
                     focus:ring-2 focus:ring-white/50 focus:border-transparent 
                     hover:border-zinc-600 transition-all duration-200"
              placeholder="Confirm your new password"
            >
            <i class="fas fa-lock absolute left-3 top-3 text-zinc-500"></i>
            <button type="button" 
                    onclick="togglePassword('confirmPassword', 'toggleConfirmPassword')"
                    class="absolute right-3 top-3 text-zinc-500 hover:text-white transition-colors">
              <i class="fas fa-eye" id="toggleConfirmPassword"></i>
            </button>
          </div>
        </div>

        <!-- Submit Button -->
        <button 
          type="submit" 
          id="submitButton"
          disabled
          class="w-full bg-zinc-500 text-white hover:bg-zinc-600 font-semibold py-3 rounded-lg 
                 transition-all duration-300 transform hover:scale-[1.02] active:scale-95
                 focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-black
                 shadow-lg hover:shadow-white/10 disabled:opacity-50 disabled:cursor-not-allowed"
        >
          Reset Password
        </button>
      </form>

      <!-- Divider -->
      <div class="flex items-center my-8">
        <hr class="flex-grow border-zinc-800">
        <span class="px-4 text-zinc-500 text-sm">OR</span>
        <hr class="flex-grow border-zinc-800">
      </div>

      <!-- Additional Options -->
      <div class="space-y-4">
        <!-- Back to Login -->
        <a 
          href="/login" 
          class="block w-full text-center bg-transparent border border-zinc-700 text-zinc-300 
                 hover:bg-zinc-800/50 hover:text-white font-semibold py-3 rounded-lg 
                 transition-all duration-300 transform hover:scale-[1.02] active:scale-95"
        >
          Back to Login
        </a>
      </div>

      <!-- Help Text -->
      <div class="mt-8 text-center">
        <p class="text-zinc-500 text-sm">
          Need help? 
          <a href="/contact" class="text-white hover:text-zinc-300 transition-colors">Contact Support</a>
        </p>
      </div>
    </div>
  </div>

  <!-- Loading Overlay (hidden by default) -->
  <div id="loadingOverlay" class="fixed inset-0 bg-black/80 backdrop-blur-sm hidden items-center justify-center z-50">
    <div class="text-center">
      <div class="w-16 h-16 border-4 border-white border-t-transparent rounded-full animate-spin mb-4"></div>
      <p class="text-white">Resetting your password...</p>
    </div>
  </div>

  <script>
    // Password toggle functionality
    function togglePassword(inputId, toggleId) {
      const input = document.getElementById(inputId);
      const toggleIcon = document.getElementById(toggleId);
      
      if (input.type === 'password') {
        input.type = 'text';
        toggleIcon.classList.remove('fa-eye');
        toggleIcon.classList.add('fa-eye-slash');
      } else {
        input.type = 'password';
        toggleIcon.classList.remove('fa-eye-slash');
        toggleIcon.classList.add('fa-eye');
      }
    }

    // Real-time password validation
    const password = document.getElementById('password');
    const confirmPassword = document.getElementById('confirmPassword');
    const submitButton = document.getElementById('submitButton');
    const form = document.getElementById('resetForm');

    // Validation checks
    const lengthCheck = document.getElementById('lengthCheck');
    const uppercaseCheck = document.getElementById('uppercaseCheck');
    const numberCheck = document.getElementById('numberCheck');
    const matchCheck = document.getElementById('matchCheck');

    function validatePassword() {
      const pass = password.value;
      const confirm = confirmPassword.value;
      let isValid = true;
      let currentError = null;

      // Clear all checks first
      [lengthCheck, uppercaseCheck, numberCheck, matchCheck].forEach(check => {
        check.classList.remove('text-green-400', 'text-red-400');
        check.classList.add('text-zinc-400');
        check.querySelector('i').classList.remove('fa-check-circle', 'fa-times-circle');
        check.querySelector('i').classList.add('fa-circle');
      });

      // Check requirements in priority order
      
      // 1. Length check
      if (pass.length < 8) {
        lengthCheck.classList.remove('text-zinc-400');
        lengthCheck.classList.add('text-red-400');
        lengthCheck.querySelector('i').classList.remove('fa-circle');
        lengthCheck.querySelector('i').classList.add('fa-times-circle');
        isValid = false;
        currentError = 'length';
      } else {
        lengthCheck.classList.remove('text-zinc-400');
        lengthCheck.classList.add('text-green-400');
        lengthCheck.querySelector('i').classList.remove('fa-circle');
        lengthCheck.querySelector('i').classList.add('fa-check-circle');
      }

      // 2. Uppercase check (only if length is valid)
      if (isValid && !/[A-Z]/.test(pass)) {
        uppercaseCheck.classList.remove('text-zinc-400');
        uppercaseCheck.classList.add('text-red-400');
        uppercaseCheck.querySelector('i').classList.remove('fa-circle');
        uppercaseCheck.querySelector('i').classList.add('fa-times-circle');
        isValid = false;
        currentError = 'uppercase';
      } else if (pass.length >= 8) {
        uppercaseCheck.classList.remove('text-zinc-400');
        uppercaseCheck.classList.add('text-green-400');
        uppercaseCheck.querySelector('i').classList.remove('fa-circle');
        uppercaseCheck.querySelector('i').classList.add('fa-check-circle');
      }

      // 3. Number check (only if previous checks pass)
      if (isValid && !/\d/.test(pass)) {
        numberCheck.classList.remove('text-zinc-400');
        numberCheck.classList.add('text-red-400');
        numberCheck.querySelector('i').classList.remove('fa-circle');
        numberCheck.querySelector('i').classList.add('fa-times-circle');
        isValid = false;
        currentError = 'number';
      } else if (pass.length >= 8 && /[A-Z]/.test(pass)) {
        numberCheck.classList.remove('text-zinc-400');
        numberCheck.classList.add('text-green-400');
        numberCheck.querySelector('i').classList.remove('fa-circle');
        numberCheck.querySelector('i').classList.add('fa-check-circle');
      }

      // 4. Match check (only if all password requirements pass)
      if (isValid && pass !== confirm) {
        matchCheck.classList.remove('text-zinc-400');
        matchCheck.classList.add('text-red-400');
        matchCheck.querySelector('i').classList.remove('fa-circle');
        matchCheck.querySelector('i').classList.add('fa-times-circle');
        isValid = false;
        currentError = 'match';
      } else if (pass.length >= 8 && /[A-Z]/.test(pass) && /\d/.test(pass) && pass === confirm) {
        matchCheck.classList.remove('text-zinc-400');
        matchCheck.classList.add('text-green-400');
        matchCheck.querySelector('i').classList.remove('fa-circle');
        matchCheck.querySelector('i').classList.add('fa-check-circle');
      }

      // Update submit button state
      if (isValid) {
        submitButton.disabled = false;
        submitButton.classList.remove('bg-zinc-500');
        submitButton.classList.add('bg-white', 'text-black');
      } else {
        submitButton.disabled = true;
        submitButton.classList.remove('bg-white', 'text-black');
        submitButton.classList.add('bg-zinc-500');
      }

      return { isValid, currentError };
    }

    // Add event listeners
    password.addEventListener('input', validatePassword);
    confirmPassword.addEventListener('input', validatePassword);

    // Form submission
    form.addEventListener('submit', function(e) {
      const validation = validatePassword();
      if (!validation.isValid) {
        e.preventDefault();
        let errorMessage = '';
        switch (validation.currentError) {
          case 'length':
            errorMessage = 'Password must be at least 8 characters long';
            break;
          case 'uppercase':
            errorMessage = 'Password must contain at least one uppercase letter';
            break;
          case 'number':
            errorMessage = 'Password must contain at least one number';
            break;
          case 'match':
            errorMessage = 'Passwords do not match';
            break;
        }
        // You can display this error message in your UI if needed
        return;
      }
      document.getElementById('loadingOverlay').style.display = 'flex';
    });
  </script>
</body>
</html> 