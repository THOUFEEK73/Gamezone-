<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>GameZone - Forgot Password</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/your-code.js" crossorigin="anonymous"></script>
</head>
<body class="bg-gradient-to-b from-black via-zinc-900 to-black font-sans">
  <div class="min-h-screen flex items-center justify-center px-4">
    <div class="w-full max-w-md bg-zinc-900/50 backdrop-blur-sm p-8 rounded-2xl shadow-2xl border border-zinc-800/50 hover:border-zinc-700/50 transition-all duration-300">
      <!-- Logo and Title -->
      <div class="text-center mb-8 transform hover:scale-105 transition-transform duration-300">
        <h1 class="text-5xl font-bold text-white mb-2 animate-pulse">GameZone</h1>
        <p class="text-zinc-400 hover:text-zinc-300 transition-colors">Reset Your Password</p>
      </div>

      <!-- Description -->
      <p class="text-zinc-400 text-center mb-8">
        Enter your email address and we'll send you a link to reset your password.
      </p>

      <!-- Error Message (if any) -->
      <% if (typeof err !== 'undefined' && err) { %>
        <div class="bg-red-900/20 border border-red-900/30 text-red-400 px-4 py-2 rounded-lg mb-6 animate-shake">
          <%= err %>
        </div>
      <% } %>

      <!-- Success Message (if any) -->
      <% if (typeof success !== 'undefined' && success) { %>
        <div class="bg-green-900/20 border border-green-900/30 text-green-400 px-4 py-2 rounded-lg mb-6 animate-bounce">
          <%= success %>
        </div>
      <% } %>

      <!-- Forgot Password Form -->
      <form action="/forgot-password" method="POST" class="space-y-6">
        <!-- Email -->
        <div class="group">
          <label for="email" class="block text-sm font-medium text-zinc-300 mb-2 group-hover:text-white transition-colors">
            Email Address
          </label>
          <div class="relative">
            <input 
              type="email" 
              id="email" 
              name="email" 
              required
              class="w-full bg-zinc-800/50 border border-zinc-700 text-white rounded-lg pl-10 pr-4 py-2.5 
                     focus:ring-2 focus:ring-white/50 focus:border-transparent 
                     hover:border-zinc-600 transition-all duration-200"
              placeholder="Enter your registered email"
            >
            <i class="fas fa-envelope absolute left-3 top-3 text-zinc-500"></i>
          </div>
        </div>

        <!-- Submit Button -->
        <button 
          type="submit" 
          class="w-full bg-white text-black hover:bg-zinc-200 font-semibold py-3 rounded-lg 
                 transition-all duration-300 transform hover:scale-[1.02] active:scale-95
                 focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-black
                 shadow-lg hover:shadow-white/10"
        >
          Send Reset Link
        </button>
      </form>

      <!-- Divider -->
      <div class="flex items-center my-8">
        <hr class="flex-grow border-zinc-800">
        <span class="px-4 text-zinc-500 text-sm">OR</span>
        <hr class="flex-grow border-zinc-800">
      </div>

      <!-- Additional Options -->
      <div class="space-y-4">
        <!-- Back to Login -->
        <a 
          href="/login" 
          class="block w-full text-center bg-transparent border border-zinc-700 text-zinc-300 
                 hover:bg-zinc-800/50 hover:text-white font-semibold py-3 rounded-lg 
                 transition-all duration-300 transform hover:scale-[1.02] active:scale-95"
        >
          Back to Login
        </a>

        <!-- Sign Up Link -->
        <div class="text-center">
          <span class="text-zinc-500">Don't have an account?</span>
          <a 
            href="/signup" 
            class="text-white hover:text-zinc-300 ml-2 transition-colors inline-block transform hover:translate-x-1"
          >
            Sign up â†’
          </a>
        </div>
      </div>

      <!-- Help Text -->
      <div class="mt-8 text-center">
        <p class="text-zinc-500 text-sm">
          Need help? 
          <a href="/contact" class="text-white hover:text-zinc-300 transition-colors">Contact Support</a>
        </p>
      </div>
    </div>
  </div>

  <!-- Loading Overlay (hidden by default) -->
  <div id="loadingOverlay" class="fixed inset-0 bg-black/80 backdrop-blur-sm hidden items-center justify-center z-50">
    <div class="text-center">
      <div class="w-16 h-16 border-4 border-white border-t-transparent rounded-full animate-spin mb-4"></div>
      <p class="text-white">Sending reset link...</p>
    </div>
  </div>

  <script>
    // Show loading overlay when form is submitted
    document.querySelector('form').addEventListener('submit', function() {
      document.getElementById('loadingOverlay').style.display = 'flex';
    });
  </script>
</body>
</html> 