<!DOCTYPE html>
<html lang="en" class="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GameZone Admin - Games</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-bg: #f8fafc;
            --secondary-bg: #ffffff;
            --accent-color: #6366f1;
            --text-primary: #1e293b;
            --text-secondary: #64748b;
            --border-color: #e2e8f0;
        }

        .dark {
            --primary-bg: #0f172a;
            --secondary-bg: #1e293b;
            --accent-color: #818cf8;
            --text-primary: #f1f5f9;
            --text-secondary: #94a3b8;
            --border-color: #334155;
        }

        body {
            background-color: var(--primary-bg);
            color: var(--text-primary);
            transition: all 0.3s ease;
        }

        .sidebar {
            background-color: var(--secondary-bg);
            border-right: 1px solid var(--border-color);
        }

        .card {
            background-color: var(--secondary-bg);
            border: 1px solid var(--border-color);
            transition: all 0.2s ease;
        }

        .card:hover {
            transform: translateY(-2px);
        }

        .game-image {
            aspect-ratio: 16/9;
            object-fit: cover;
        }

        .game-title {
            font-size: 1rem;
            font-weight: 600;
        }

        .game-category {
            font-size: 0.8125rem;
        }

        .game-price {
            font-size: 0.9375rem;
            font-weight: 600;
        }

        .status-tag {
            font-size: 0.75rem;
        }
    </style>
</head>
<body class="flex h-screen">
    <!-- Sidebar (reuse from dashboard) -->
    <div class="sidebar w-64 fixed left-0 top-0 h-full text-gray-300 dark:text-gray-400">
        <div class="p-6">
            <div class="flex items-center mb-8">
                <i class="fas fa-gamepad text-2xl text-indigo-500 mr-3"></i>
                <h1 class="text-xl font-bold text-gray-800 dark:text-white">GameZone</h1>
            </div>
            <nav class="space-y-1">
                <a href="/admin/dashboard" class="nav-link flex items-center p-3 text-gray-600 dark:text-gray-400 hover:bg-emerald-50 dark:hover:bg-emerald-900/20 rounded-lg">
                    <i class="fas fa-home mr-3"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/admin/games" class="nav-link flex items-center p-3 text-indigo-600 bg-indigo-50 dark:bg-indigo-900/20 rounded-lg">
                    <i class="fas fa-gamepad mr-3"></i>
                    <span>Games</span>
                </a>
                <!-- Other nav items -->
            </nav>
        </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 ml-64 p-8">
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-2xl font-bold">Games Management</h1>
            <div class="flex items-center space-x-4">
                <button id="themeToggle" class="p-2 rounded-lg bg-gray-100 dark:bg-gray-800">
                    <i class="fas fa-sun text-yellow-500 dark:hidden"></i>
                    <i class="fas fa-moon text-blue-500 hidden dark:block"></i>
                </button>
                <button class="flex items-center px-4 py-2 bg-indigo-500 text-white rounded-lg hover:bg-indigo-600 transition-colors">
                    <i class="fas fa-plus mr-2"></i>
                    Add New Game
                </button>
            </div>
        </div>

        <!-- Filters -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
            <input type="text" placeholder="Search games..." class="px-4 py-2 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800">
            <select class="px-4 py-2 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800">
                <option>All Platforms</option>
                <option>PS5</option>
                <option>Xbox Series X</option>
                <option>Nintendo Switch</option>
            </select>
            <select class="px-4 py-2 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800">
                <option>All Categories</option>
                <option>Action</option>
                <option>Adventure</option>
                <option>RPG</option>
                <option>Sports</option>
            </select>
            <select class="px-4 py-2 rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800">
                <option>Sort By: Latest</option>
                <option>Price: Low to High</option>
                <option>Price: High to Low</option>
                <option>Name: A to Z</option>
            </select>
        </div>

        <!-- Games Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Game Card -->
            <div class="card rounded-lg overflow-hidden">
                <img src="https://via.placeholder.com/400x225" alt="Game" class="game-image w-full">
                <div class="p-4">
                    <div class="flex justify-between items-start mb-2">
                        <h3 class="font-semibold">God of War Ragnarök</h3>
                        <span class="text-emerald-500 font-semibold">$59.99</span>
                    </div>
                    <div class="flex items-center mb-3">
                        <span class="text-sm text-gray-500 dark:text-gray-400">PS5</span>
                        <span class="mx-2">•</span>
                        <span class="text-sm text-gray-500 dark:text-gray-400">Action</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="px-2 py-1 text-xs rounded-full bg-emerald-100 dark:bg-emerald-900/20 text-emerald-600">In Stock</span>
                        <div class="flex space-x-2">
                            <button class="p-2 text-gray-500 hover:text-emerald-500">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="p-2 text-gray-500 hover:text-red-500">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- More game cards... -->
        </div>

        <!-- Pagination -->
        <div class="flex justify-center mt-8">
            <nav class="flex space-x-2">
                <button class="px-3 py-1 rounded-lg border border-gray-200 dark:border-gray-700 text-gray-600 dark:text-gray-400">Previous</button>
                <button class="px-3 py-1 rounded-lg bg-emerald-500 text-white">1</button>
                <button class="px-3 py-1 rounded-lg border border-gray-200 dark:border-gray-700 text-gray-600 dark:text-gray-400">2</button>
                <button class="px-3 py-1 rounded-lg border border-gray-200 dark:border-gray-700 text-gray-600 dark:text-gray-400">3</button>
                <button class="px-3 py-1 rounded-lg border border-gray-200 dark:border-gray-700 text-gray-600 dark:text-gray-400">Next</button>
            </nav>
        </div>
    </div>

    <script>
        // Theme Toggle
        const themeToggle = document.getElementById('themeToggle');
        const html = document.documentElement;

        // Check for saved theme preference
        if (localStorage.getItem('theme') === 'dark' || 
            (!localStorage.getItem('theme') && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            html.classList.add('dark');
        }

        // Toggle theme
        themeToggle.addEventListener('click', () => {
            html.classList.toggle('dark');
            localStorage.setItem('theme', html.classList.contains('dark') ? 'dark' : 'light');
        });
    </script>
</body>
</html>